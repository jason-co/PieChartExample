<Control x:Class="PieCharts.SimplePieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pieCharts="clr-namespace:PieCharts">
	<Control.Template>
		<ControlTemplate TargetType="{x:Type pieCharts:SimplePieChart}">
			<Image x:Name="PART_PieChart" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
		</ControlTemplate>
	</Control.Template>
</Control>
